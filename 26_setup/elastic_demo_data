GET person/_search
{
  "explain": false,
  "query": {
    "bool": {
      "must": [
        {
          "multi_match": {
            "query": "lu 1220",
            "fields": [
              "lastName.keyword^10",
              "lastName.text^5",
              "firstName.keyword^10",
              "firstName.text",
              "addresses.zip.text^5",
              "addresses.zip.keyword^10"
            ],
            "type": "cross_fields",
            "operator": "and"
          }
        }
      ],
      "filter": [
        {
          "multi_match": {
            "query": "lu 1220",
            "fields": [
              "lastName.keyword",
              "lastName.text",
              "firstName.keyword",
              "firstName.text",
              "addresses.zip.text",
              "addresses.zip.keyword"
            ],
            "type": "cross_fields",
